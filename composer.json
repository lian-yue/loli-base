{
    "name": "loli/base",
    "type": "library",
    "description": "The Loli Framework Base.",
    "keywords": ["framework", "loli"],
    "license": "Apache2",
    "version" : "1.0.3",
    "authors": [
        {
            "name": "Lian Yue",
            "email": "admin@lianyue.org"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "ext-mcrypt": "*",
        "ext-fileinfo": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "psr/log": "^1.0",
        "psr/cache": "^1.0",
        "psr/http-message": "^1.0",
        "guzzlehttp/psr7": "^1.2"
    },
    "replace": {
        "Loli": "self.version"
    },
    "autoload": {
        "files": [
            "src/functions.php",
            "src/include.php"
        ],
        "psr-4": {
            "Loli\\": "src/loli/"
        }
    },
    "minimum-stability" : "stable",
    "prefer-stable" : true
}
